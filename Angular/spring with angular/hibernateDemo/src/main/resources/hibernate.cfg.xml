<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>     
  <session-factory>
     <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
    <property name="hibernate.connection.url">jdbc:oracle:thin:@localhost:1521:XE</property>
    <property name="hibernate.connection.username">SYSTEM</property>
    <property name="hibernate.connection.password">root</property>
    
    <!-- <property name="packagesToScan"  >com.demo.springBootCrud.model</property> -->
    <property name="show_sql">true</property>
    <property name="hbm2ddl.auto">update</property> 
    <property name="dialect">org.hibernate.dialect.Oracle10gDialect</property>
    <!-- <property name="hibernate.connection.datasource">java:comp/env/jdbc/jndi-oracle-db</property> -->
    <!--          
    <mapping class="package.ModelClass1" />
    <mapping class="package.ModelClass2" />
    <mapping class="package.ModelClass3" /> -->
      
  </session-factory>
</hibernate-configuration>